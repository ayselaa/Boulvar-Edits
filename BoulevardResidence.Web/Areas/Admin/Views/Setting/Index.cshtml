@model List<Setting>
@{
    ViewData["Title"] = "Index";
}

<section class="pandora-container">
    <div class="container">
        <div class="row">
            <div class="pandora-banner-div">
                <h3 class="pandora-banner-title">Setting</h3>
            </div>
            <div style="margin-top:3rem;">
                <div class="container-p">
                    <div class="row">
                        <div class="col-12">
                            @if (Model.Count() > 0)
                            {
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="text-center" scope="col">Key</th>
                                            <th class="text-center" scope="col">Value</th>
                                            <th class="text-center" scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var setting in Model)
                                        {


                                            <tr data-id="@setting.Id" class="slider-row">
                                                <td class="text-center">@setting.Key</td>
                                                @if (setting.Value.Contains(".png") || setting.Value.Contains(".jpg") || setting.Value.Contains(".jpeg"))
                                                {
                                                    <td><img style="width:27%" class="table-img" src="~/logogallery/@setting.Value" /></td>
                                                }
                                                else
                                                {
                                                    <td class="text-center">@setting.Value</td>
                                                }



                                                <td class="p-buttons" class="text-center">

                                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@setting.Id">Edit</a>


                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

