@model List<BoulevardResidence.Domain.Entity.Contacts.Contact>
@{
    ViewData["Title"] = "Index";
}

<section class="pandora-container">
    <div class="container">
        <div class="row">
            <div class="pandora-banner-div">
                <h3 class="pandora-banner-title">Contact</h3>
 
            </div>
            <div style="margin-top:3rem !important;">
                <div class="container-p">
                    <div class="row">
                        <div class="col-12">
                            @if(Model.Count() > 0)
                            {
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">Name</th>
                                            <th scope="col">Surname</th>
                                            <th scope="col">Email Address</th>
                                            <th scope="col">Phone Number</th>
                                            <th scope="col">Message</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var menu in Model)
                                        {
                                                <tr data-id="@menu.Id">
                                                    <td>@menu.Name</td>
                                                    <td>@menu.Surname</td>
                                                    <td>@menu.Email</td>
                                                    <td>@menu.Phone</td>
                                                    <td>@menu.Message</td>
                                                </tr>
                                            
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



