@model ComfortBlogDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="sliderdetails">

<h1>Comfort Blog Details</h1>

<div class="mt-div">
    <h4>Slider ID: @Model.Id</h4>
    <img style="width:25%" src="~/comfortbloggallery/@Model.Image" class="img-fluid" alt="Slider Image">
</div>


<h4>Translations:</h4>

@foreach (var translate in Model.Translates)
{
    <div class="width50">
        <h5>@translate.LangCode</h5>
        <p>Description: @translate.Description</p>
         <hr />
    </div>

   
}

    <a class="detail-back" asp-action="Index">Back to List</a>

</div>

